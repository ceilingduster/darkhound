# Application
APP_ENV=development
SECRET_KEY=change-me-in-production-at-least-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql+asyncpg://darkhound:darkhound@localhost:5432/darkhound

# Redis (optional, for future use)
# REDIS_URL=redis://localhost:6379/0

# Vault
VAULT_ENABLED=false
VAULT_ADDR=http://localhost:8200
VAULT_ROLE_ID=
VAULT_SECRET_ID=

# AI Provider: "anthropic" | "openai" | "ollama"
AI_PROVIDER=openai

# Anthropic
ANTHROPIC_API_KEY=sk-ant-XXXXXXXXXXXXXXXXXXXXXXXXX
ANTHROPIC_MODEL=claude-opus-4-6

# OpenAI (or any OpenAI-compatible endpoint)
OPENAI_API_KEY=sk-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
OPENAI_MODEL=gpt-5.2
OPENAI_BASE_URL=

# Ollama (local)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1

# MCP Providers
VIRUSTOTAL_API_KEY=
SHODAN_API_KEY=
ABUSEIPDB_API_KEY=

# MCP Base URLs (override for self-hosted)
VIRUSTOTAL_MCP_URL=https://www.virustotal.com/api/v3
SHODAN_MCP_URL=https://api.shodan.io
ABUSEIPDB_MCP_URL=https://api.abuseipdb.com/api/v2

# Concurrency
MAX_SESSIONS=50
EVENT_QUEUE_MAX=1000

# CORS
CORS_ORIGINS=http://localhost:3500,http://172.16.0.65:3500

# Dev credential fallback (VAULT_ENABLED=false only)
# ASSET_{UUID}_SSH_KEY=/path/to/key
# ASSET_{UUID}_SSH_PASSWORD=password
